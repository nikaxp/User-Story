{% extends "::base.html.twig" %}

{% block title %}Person{% endblock %}

{% block body %}
    <div>
        <h1>{{ person.alias }}</h1>
        {% if person.brochure %}
        <a href="{{ asset('uploads/brochures/' ~ person.brochure) }}">View photo</a>
        {% endif %}
        <p><b>Name:</b> {{ person.name }}</p>
        <p><b>Surname:</b> {{ person.surname }}</p>
        <p><b>Description:</b> {{ person.description }}</p>
        <a href="{{ path('modifyPerson', {'id': person.id}) }}">Edit</a>
        {#<button class = "btn btn-xs "#}
                {#onclick = "window.location.href='{{ path('addAddress', {'id': person.getId()}) }}' "#}
                {#type="button"#}
        {#>Add address</button>#}
        {% if person.getAddresses() %}
            {% for a in person.getAddresses() %}
            <p><b>City:</b> {{ a.city }}</p>
        {% endfor %}
        {% endif %}

    </div>
{% endblock %}
